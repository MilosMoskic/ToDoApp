@{
}

<form method="post">
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Importance">Importance</label>
        <select asp-for="Importance" asp-items="@Html.GetEnumSelectList<ImportantCategory>()" class="form-control form-control-lg"></select>
        <span asp-validation-for="Importance" class="text-danger"></span>
    </div>
    <br/>

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-controller="Taskk" asp-action="Index" class="btn btn-warning">
        Back to Tasks
    </a>
</form>